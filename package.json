{
    "name": "konbini",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*"
        ],
        "catalog": {
            "@zakahacecosas/number-utils": "npm:@jsr/zakahacecosas__number-utils",
            "@zakahacecosas/string-utils": "npm:@jsr/zakahacecosas__string-utils",
            "yaml": "^2.8.0",
            "typescript": "~5.8.3",
            "@types/bun": "latest"
        }
    },
    "scripts": {
        "pretty": "prettier --w . && eslint . --cache --fix && tsc --noEmit",
        "run:cli": "bun packages/cli/src/index.ts",
        "run:web": "cd packages/gui && bun run dev",
        "build": "echo 'Building the CLI...' && bun run bld:cli && echo 'Building the GUI...' && bun run bld:web",
        "bld:cli": "bun packages/cli/build.ts",
        "bld:web": "cd packages/gui && bun run build",
        "launch:web": "cd packages/gui && bun run prod",
        "launch:web:bld": "bun run bld:web && cd packages/gui && bun run prod",
        "av": "bun packages/guard/avs.ts"
    },
    "dependencies": {
        "prettier": "^3.6.0",
        "eslint": "^9.29.0"
    }
}
